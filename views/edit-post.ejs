<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head.ejs') %>
<body>
  <%- include('./partials/nav.ejs') %>
  <form 
    id="post-form" 
    method="post" 
    action="/edit/<%= post.id %>?_method=PUT" 
    enctype="multipart/form-data"
    >
    <div class="form-info">
      <label>Post Title
        <input type="text" name="title" value="<%= post.title %>">
      </label>
      <label>Author
        <input type="text" name="author" value="<%= post.author %>">
      </label>
      
    </div>
    <label>urlImage
        <input type="text" name="urlImage" value="<%= post.urlImage %>" width="100%">
      </label>
    <div class="form-text">
      <label>Old image:
        <img src="/uploads/<%= post.urlImage %>" alt="<%= post.urlImage %>" width="100px">
        <input type="file" name="image">
      </label>
      <img src="" alt="">
    </div>
    <div class="form-text">
      <label>Post Text
        <textarea name="text"><%= post.text %></textarea>
      </label>
    </div>
    <div class="form-button">
      <input type="submit" value="Submit">
    </div>
  </form>
</body>
</html>
